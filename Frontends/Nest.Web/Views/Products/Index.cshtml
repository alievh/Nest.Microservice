@model List<ProductViewModel>

<div class="page-header breadcrumb-wrap">
    <div class="container">
        <div class="breadcrumb">
            <a asp-controller="Home" asp-action="Index"><i class="fi-rs-home mr-5"></i>Home</a>
            <span></span> Pages <span></span> My Account
        </div>
    </div>
</div>
<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="row">
                    <div class="col-md-3">
                        <div class="dashboard-menu">
                            <ul class="nav flex-column" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" asp-controller="Products" asp-action="Index"><i class="fi-rs-settings-sliders mr-10"></i>Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Products" asp-action="Create" ><i class="fi-rs-user mr-10"></i>New Product</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="tab-content account dashboard-content pl-50">
                            
                            <div class="tab-pane fade active show">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="mb-0">Your Products</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Price</th>
                                                        <th>Stock</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var product in Model)
                                                    {
                                                        <tr>
                                                            <td>@product.Name</td>
                                                            <td>@product.ShortDescription</td>
                                                            <td>$@product.Price</td>
                                                            <td>@product.Stock</td>
                                                            <td>
                                                                <a asp-controller="Products" asp-action="Update" asp-route-id="@product.Id" class="btn-small d-block">Edit</a>
                                                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn-small d-block">Delete</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>